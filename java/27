package com.company;

public class ArraysLengthAndForEachLoop27 {
    public static void main(String[] args) {

//---------------------------------------------------------------------------------------------------
        int [] marks = {98, 45, 79, 99, 80};
//---------------------------------------------------------------------------------------------------

        System.out.println(marks.length); // ye array ki length btata hy   iss array ki length 5 hy

//----------------------------------------------------------------------------------------------------
//        simple way to display an array
        System.out.println(marks[0]);
        System.out.println(marks[1]);
        System.out.println(marks[2]);
        System.out.println(marks[3]);
        System.out.println(marks[4]);

//-----------------------------------------------------------------------------------------------
//
        System.out.println("NOW printing the array using  incrementing for LOOP");

        for (int i=0; i<marks.length; i++){
            System.out.println(marks[i]);
        };

        System.out.println("NOW printing the array using  decrementing for LOOP");

        for (int i=marks.length-1; i>=0; i--){
            System.out.println(marks[i]);
        };

//-----------------------------------------------------------------------------------------

        System.out.println("NOW displaying the array using for-each loop");

        for (int element:marks){
            System.out.println(element);
        }

//------------------------------------------------------------------------------------------------
    }

   //   o=98    1=45   2=79   3=99    4=80
}
